<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="pokeball"
            android:width="100dp"
            android:height="100dp"
            android:viewportWidth="100"
            android:viewportHeight="100">
            <group
                android:name="pokeball_group"
                android:pivotX="50"
                android:pivotY="50">
                <path
                    android:name="outer_circle"
                    android:pathData="M 50 0 C 22.4 0 0 22.4 0 50 C 0 77.6 22.4 100 50 100 C 77.6 100 100 77.6 100 50 C 100 22.4 77.6 0 50 0 Z"
                    android:fillColor="#DCDBDB"
                    android:strokeColor="#000000"
                    android:strokeWidth="3"
                    android:strokeLineCap="round"/>
                <path
                    android:name="outer_circle_1"
                    android:pathData="M 50 0 C 22.4 0 0 22.4 0 50 C 0 77.6 22.4 100 50 100 C 77.6 100 50 77.6 50 50 C 50 22.4 77.6 0 50 0 Z"
                    android:fillColor="#F32C2C"
                    android:strokeColor="#000000"
                    android:strokeWidth="3"
                    android:strokeLineCap="round"/>
                <path
                    android:name="white_line_2"
                    android:pathData="M 50 0 L 50 60 L 50 40 L 50 100"
                    android:strokeColor="#000000"
                    android:strokeWidth="11"/>
                <path
                    android:name="white_line_1"
                    android:pathData="M 50 0 L 50 60 L 50 40 L 50 100"
                    android:strokeColor="#856F6F"
                    android:strokeWidth="8"/>
                <path
                    android:name="black_line_1"
                    android:pathData="M 50 50 C 50 45 45 40 40 40 C 35 40 30 45 30 50 C 30 55 35 60 40 60 C 45 60 50 55 50 50"
                    android:strokeColor="#131313"
                    android:strokeWidth="16"/>
                <path
                    android:name="black_line_2"
                    android:pathData="M 50 50 C 50 45 45 40 40 40 C 35 40 30 45 30 50 C 30 55 35 60 40 60 C 45 60 50 55 50 50"
                    android:fillColor="#22222266"
                    android:strokeColor="#ffffff"
                    android:strokeWidth="10"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="pokeball_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="rotation"
                    android:duration="3000"
                    android:valueFrom="90"
                    android:valueTo="100"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/decelerate_interpolator"/>
                <objectAnimator
                    android:propertyName="rotation"
                    android:startOffset="0"
                    android:duration="3000"
                    android:valueFrom="90"
                    android:valueTo="110"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="black_line_2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:duration="3000"
                android:valueFrom="0"
                android:valueTo="1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E74C3C"
    android:orientation="vertical"
    tools:context=".activity.TypeActivity"
    tools:menu="@menu/menu_pokedex">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/quternary"
        android:gravity="center_horizontal"
        android:text="Lista de Pokémons por tipo"
        android:textColor="@color/primary_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextHability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/primary_light"
        android:hint="Digita o tipo do Pokémon para pesquisar"
        android:inputType="textPersonName"
        android:minHeight="48sp"
        android:textColor="@color/quternary" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/terciary"
        android:minWidth="150dp"
        android:onClick="search"
        android:text="Pesquisar"
        android:textAllCaps="false"
        android:textColor="@color/primary_light" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPokeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp" />

</LinearLayout>